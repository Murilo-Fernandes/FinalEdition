<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#F8F9FA">

    <!-- Card Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:background="#FFFFFF">

            <!-- Logo -->
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="81dp"
                android:layout_height="83dp"
                android:layout_gravity="center"
                android:src="@mipmap/img"
                android:layout_marginBottom="16dp"/>

            <!-- Título -->
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="BatSCANNER"
                android:textColor="#212529"
                android:textSize="34sp"
                android:textStyle="bold" />

            <!-- Nome Completo -->
            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome Completo:"
                android:textColor="#6C757D"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#6C757D"
                app:hintTextColor="#6C757D">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtNomeCompleto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Digite seu nome completo"
                    android:inputType="textPersonName"
                    android:textColor="#212529"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Email Input -->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insira um Email:"
                android:textColor="#6C757D"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#6C757D"
                app:hintTextColor="#6C757D">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtEmailCadastro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="exemplo@email.com"
                    android:inputType="textEmailAddress"
                    android:textColor="#212529"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Senha Input -->
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crie uma senha:"
                android:textColor="#6C757D"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#6C757D"
                app:hintTextColor="#6C757D"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#6C757D">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtSenhaCadastro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mínimo 6 caracteres"
                    android:inputType="textPassword"
                    android:textColor="#212529"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botão Confirmar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Confirmar"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                app:backgroundTint="#0D6EFD"
                app:rippleColor="#0B5ED7"
                android:onClick="confirmar"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>