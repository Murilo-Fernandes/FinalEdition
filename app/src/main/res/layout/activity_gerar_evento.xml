<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#F8F9FA">

    <!-- Card Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:background="#FFFFFF"
            android:gravity="center">

            <!-- QR Code Preview -->
            <ImageView
                android:id="@+id/imgQrCode"
                android:layout_width="248dp"
                android:layout_height="248dp"
                android:layout_marginBottom="24dp"
                android:contentDescription="Visualização do QR Code"/>

            <!-- Nome do Evento -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#6C757D"
                app:hintTextColor="#6C757D">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtNome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome do Evento"
                    android:inputType="text"
                    android:textColor="#212529"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Data do Evento -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#6C757D"
                app:hintTextColor="#6C757D">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Data do Evento"
                    android:inputType="none"
                    android:textColor="#212529"
                    android:clickable="true"
                    android:focusable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Horário do Evento -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeColor="#6C757D"
                app:hintTextColor="#6C757D">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtHora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Horário do Evento"
                    android:inputType="none"
                    android:textColor="#212529"
                    android:clickable="true"
                    android:focusable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botão Gerar QRCode -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCriar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Gerar QRCode"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:iconTint="#FFFFFF"
                app:iconGravity="textStart"
                app:cornerRadius="8dp"
                app:backgroundTint="#0D6EFD"
                app:rippleColor="#0B5ED7"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>