<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#F8F9FA">

    <!-- Card Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:background="#FFFFFF"
            android:gravity="center">

            <!-- Foto de Perfil -->
            <ImageView
                android:id="@+id/imgPerfil"
                android:layout_width="210dp"
                android:layout_height="238dp"
                android:layout_marginBottom="24dp"
                android:contentDescription="Foto do perfil"
                android:scaleType="centerCrop"
                android:src="@mipmap/nightwing" />

            <!-- Nome do Usuário -->
            <TextView
                android:id="@+id/txtUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#212529"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <!-- Contador de Eventos -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#E7F1FF"
                app:cardCornerRadius="8dp"
                app:strokeColor="#0D6EFD"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtEventosCriados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 eventos criados"
                        android:textColor="#0D6EFD"
                        android:textSize="16sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botão Meus Ingressos -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIngressos"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Meus Ingressos"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:iconTint="#FFFFFF"
                app:iconGravity="textStart"
                app:cornerRadius="8dp"
                app:backgroundTint="#0D6EFD"
                app:rippleColor="#0B5ED7"
                android:layout_marginBottom="16dp"/>

            <!-- Botão Meus Eventos -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEntrar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Meus Eventos"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:iconTint="#FFFFFF"
                app:iconGravity="textStart"
                app:cornerRadius="8dp"
                app:backgroundTint="#0D6EFD"
                app:rippleColor="#0B5ED7"
                android:layout_marginBottom="16dp"/>

            <!-- Botão Sair -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSair"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Desconectar-se"
                android:textColor="#0D6EFD"
                android:textSize="18sp"
                android:textStyle="bold"
                app:iconTint="#0D6EFD"
                app:iconGravity="textStart"
                app:cornerRadius="8dp"
                app:strokeColor="#0D6EFD"
                app:strokeWidth="2dp"
                app:backgroundTint="#FFFFFF"
                app:rippleColor="#E1F0FF"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>